<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShareArt" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextWhite" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/turquesa_oscuro</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:colorControlNormal">@color/turquesa_oscuro</item>
        <item name="android:colorControlActivated">@color/turquesa_oscuro</item>
    </style>

    <style name="ToolbarName" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/turquesa_claro</item>
        <item name="colorPrimaryDark">@color/turquesa_oscuro</item>
        <item name="colorAccent">@color/turquesa</item>
    </style>
</resources>