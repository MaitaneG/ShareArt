<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Si queda mal, poner scaleType="canterInside" o centerCrop-->
        <ImageView
            android:id="@+id/imageViewArgitarapenaCard"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/kamara_argazkia_igotzeko"
            android:background="@color/turquesa_claro"/>
        <TextView
            android:id="@+id/textViewDeskriptionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskribapena: "
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:textSize="16sp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>