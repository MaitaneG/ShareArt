<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:background="@drawable/fondo_txuria"
    tools:context=".fragments.FiltroakFragment">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Layout bertikala ezkerra -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Natura -->
            <ImageView
                android:id="@+id/imageViewNaturaFiltratu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/natura_kategoria_handia" />

            <!-- Hiperrealismo -->
            <ImageView
                android:id="@+id/imageViewHiperrealismoFiltratu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/hiperrealismo_kategoria_handia" />

            <!-- Erretratoak -->
            <ImageView
                android:id="@+id/imageViewErretratoakFiltratu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/erretratoak_kategoria_handia" />

            <!-- Grafitiak -->
            <ImageView
                android:id="@+id/imageViewGraffitiFiltratu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/graffitiak_kategoria_handia" />
        </LinearLayout>

        <!-- Layout bertikala eskuma -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Komikia -->
            <ImageView
                android:id="@+id/imageViewKomikiaFiltratu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/komikia_kategoria_handia" />

            <!-- Ilustrazioa -->
            <ImageView
                android:id="@+id/imageViewIlustrazioaFiltratu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ilustrazioa_kategoria_handia" />

            <!-- Karikatura -->
            <ImageView
                android:id="@+id/imageViewKarikaturaFiltratu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/karikatura_kategoria_handia" />

            <!-- Natura hila -->
            <ImageView
                android:id="@+id/imageViewNaturaHilaFiltratu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/natura_hila_kategoria_handia" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>