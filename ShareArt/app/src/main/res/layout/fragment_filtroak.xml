<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    tools:context=".fragments.FiltroakFragment">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Layout bertikala ezkerra -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100dp">

            <!-- Natura -->
            <ImageView
                android:id="@+id/imageViewNaturaFiltratu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/natura_kategoria_handia"/>

            <!-- Hiperrealismo -->
            <ImageView
                android:id="@+id/imageViewHiperrealismoFiltratu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/hiperrealismo_kategoria_handia" />

            <!-- Erretratoak -->
            <ImageView
                android:id="@+id/imageViewErretratoakFiltratu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/erretratoak_kategoria_handia"/>

            <!-- Grafitiak -->
            <ImageView
                android:id="@+id/imageViewGraffitiFiltratu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/graffitiak_kategoria_handia"/>

            <!-- Ilustrazioa -->
            <ImageView
                android:id="@+id/imageViewIlustrazioaFiltratu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ilustrazioa_kategoria_handia" />

            <!-- Komikia -->
            <ImageView
                android:id="@+id/imageViewKomikiaFiltratu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/komikia_kategoria_handia"/>

            <!-- Natura hila -->
            <ImageView
                android:id="@+id/imageViewNaturaHilaFiltratu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/natura_hila_kategoria_handia" />

            <!-- Karikatura -->
            <ImageView
                android:id="@+id/imageViewKarikaturaFiltratu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/karikatura_kategoria_handia" />

            <!-- Abstraktua -->
            <ImageView
                android:id="@+id/imageViewAbstraktuaFiltratu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="140dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/abstraktua_kategoria_handia" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>